{
  "schemaVersion": 1,
  "id": "redtech",
  "version": "${version}",

  "name": "RedTech",
  "description": "A Minecraft Fabric mod that provides streamlined redstone conduits and gates.",
  "authors": [
    "fractalpixel"
  ],
  "contact": {
    "homepage": "https://github.com/fractalpixel/redtech",
    "sources": "https://github.com/fractalpixel/redtech"
  },

  "license": "LGPL-3.0",
  "icon": "assets/redtech/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
	    {
        "adapter": "kotlin",
        "value": "net.fractalpixel.redtech.RedTechMod"
      }
    ]
  },
  "mixins": [
    "redtech.mixins.json"
  ],

  "requires": {
    "fabric-language-kotlin": ">=1.3.30"
  },
  "depends": {
    "fabric-language-kotlin": ">=1.3.30",
    "fabricloader": ">=0.4.0",
    "fabric": "*"
  },
  "suggests": {
    "flamingo": "*"
  }
}
